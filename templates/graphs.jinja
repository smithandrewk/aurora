{% block body %}
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<main>
    <div class="d-flex justify-content-center">
        <form id='download-button' method='POST' action="{{ url_for('download_zip', filename=new_filename) }}">
            <input type="submit" value="Download Scored NeuroScore files (ZIP)" class="w-100 btn btn-primary">
        </form>
    </div>
    <div class="d-flex justify-content-center">
        {# {% for file in files %} #}
            <div id="graph-carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {# {% for file in files %} #}
                <li data-target="#graph-carousel" data-slide-to="0" class="active"></li>
                <li data-target="#graph-carousel" data-slide-to="2"></li>
                <li data-target="#graph-carousel" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ url_for('static',filename='graphs/21-KO-1-lstm-rat.png') }}" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        {# <h5></h5> #}
                        <p><a href="">Download</a></p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ url_for('static',filename='graphs/21-KO-2-lstm-rat.png') }}" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <p><a href="">Download</a></p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ url_for('static',filename='graphs/21-KO-3-lstm-rat.png') }}" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block">
                        <p><a href="">Download</a></p>
                    </div>                    
                </div>
            </div>
            <a class="carousel-control-prev" href="#graph-carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            </div>
            {# <img src="{{ url_for('static',filename='graphs/'+file) }}" /> #}
        {# {% endfor %} #}
    </div>
</main>

{% endblock body %}