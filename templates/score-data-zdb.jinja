{% extends 'base-sidebar.jinja' %}

{% block body %}
<script>
    document.getElementById("scoredatazdb").classList.add('active');
</script>
    <form method='POST', enctype='multipart/form-data'>
        {{ form.hidden_tag() }}
        <div class="form-group row d-flex justify-content-center">
            <label for="model" class="col-sm-3 col-form-label">Choose a Model</label>
            <div class="col-sm-2">
                {{ form.model(class="form-control", id='model') }}
            </div>
        </div>
        <fieldset class="form-group" required>
            <div class="row d-flex justify-content-center">
                <legend class="col-form-label col-sm-3 pt-0">Choose Uploads Type</legend>
                <div class="col-sm-2">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="iszip" id="is-zip" value="1" required>
                        <label class="form-check-label" for="is-zip">
                            Zip Archive
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="iszip" id="is-zip" value="0" required>
                        <label class="form-check-label" for="is-zip">
                            Individual File
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>   
        <div class="form-group row d-flex justify-content-center">
            <label for="file-sub" class="col-sm-3 col-form-label">Select a Data File</label>
            <div class="col-sm-2">
                {{ form.data_file(class="form-control-file", id="file-sub") }}
            </div>
        </div>
        <div class="form-group row d-flex justify-content-center">
            <label for="zdb-file-sub" class="col-sm-3 col-form-label">Select the Corrosponding ZDB File</label>
            <div class="col-sm-2">
                {{ form.zdb_file(class="form-control-file", id="zdb-file-sub") }}
            </div>
        </div>
        <div class="d-flex justify-content-center">
            {{ form.submit(class="w-50 btn btn-primary") }}
        </div>
    </form>
{% endblock body %}
